@using MusicOrganizer.Models;

@{
  Layout = "_Layout";
}
    <h2>Your Collection:</h2>

    @if (Model.Count == 0)
    {
      <p>No Records Here!</p>

    }
    <ul>
      @foreach (Record records in Model)
      {
        <li><a href='/record/@records.Id'>@records.RecordName by @records.ArtistName</a></li>
      }
    </ul>

    <a href="/record/new" class="btn btn-dark">Add a new item</a>
    <form action="/record/delete" method="post">
      <button type="submit" name="button" class="btn btn-dark" style="margin-top: 8px;">Clear All Records</button>
    </form>


